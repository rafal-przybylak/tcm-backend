{
  "name": "mediaLink",
  "description": "Załącznik|Załączniki",
  "base": "PersistedModel",
  "idInjection": true,
  "options": {
    "validateUpsert": true
  },
  "scope": {
    "include": [
      "media"
    ]
  },
  "mixins": {
    "SoftDelete" : true,
    "TimeStamp": true
  },
  "properties": {},
  "validations": [],
  "relations": {
    "media": {
      "type": "belongsTo",
      "model": "media",
      "foreignKey": "mediaId"
    },
    "avatar": {
      "type": "belongsTo",
      "as": "avatar",
      "polymorphic": {
        "foreignKey": "refId",
        "discriminator": "refType"
      }
    },
    "node": {
      "type": "belongsTo",
      "as": "files",
      "polymorphic": {
        "foreignKey": "refId",
        "discriminator": "refType"
      }
    }
  },
  "acls": [
    {
      "accessType": "*",
      "principalType": "ROLE",
      "principalId": "$everyone",
      "permission": "DENY"
    },
    {
      "accessType": "*",
      "principalType": "ROLE",
      "principalId": "administrator",
      "permission": "ALLOW",
      "property": "*"
    }
  ],
  "methods": {}
}
